{% comment %}
  Renders a progress bar for cart milestones

  Milestones:
  - 3000 TK: Get 100 TK discount
  - 5000 TK: Free Delivery
  - 8000 TK: Get 300 TK discount
{% endcomment %}

{% assign cart_total = cart.total_price | divided_by: 100.0 %}
{% assign milestone_1 = 3000 %}
{% assign milestone_2 = 5000 %}
{% assign milestone_3 = 8000 %}

<div class="cart-progress-bar-wrapper">
  <div class="cart-progress-bar">
    {% comment %} Determine current milestone and progress {% endcomment %}
    {% if cart_total < milestone_1 %}
      {% assign current_milestone = milestone_1 %}
      {% assign remaining = milestone_1 | minus: cart_total %}
      {% assign progress_percent = cart_total | divided_by: milestone_1 | times: 100 %}
      {% assign reward_text = "‡ß≥100 discount" %}
      {% assign icon_type = "gift" %}
    {% elsif cart_total >= milestone_1 and cart_total < milestone_2 %}
      {% assign current_milestone = milestone_2 %}
      {% assign remaining = milestone_2 | minus: cart_total %}
      {% assign progress_percent = cart_total | divided_by: milestone_2 | times: 100 %}
      {% assign reward_text = "FREE Delivery" %}
      {% assign icon_type = "truck" %}
    {% elsif cart_total >= milestone_2 and cart_total < milestone_3 %}
      {% assign current_milestone = milestone_3 %}
      {% assign remaining = milestone_3 | minus: cart_total %}
      {% assign progress_percent = cart_total | divided_by: milestone_3 | times: 100 %}
      {% assign reward_text = "‡ß≥300 discount" %}
      {% assign icon_type = "star" %}
    {% else %}
      {% assign progress_percent = 100 %}
      {% assign reward_text = "all rewards unlocked" %}
      {% assign icon_type = "check" %}
    {% endif %}

    {% comment %} Progress Message {% endcomment %}
    {% if cart_total < milestone_3 %}
      <div class="progress-message">
        <span class="progress-icon">üéÅ</span>
        <span class="progress-text">
          Spend <strong>‡ß≥{{ remaining | floor }}</strong> more to unlock <strong>{{ reward_text }}</strong>!
        </span>
      </div>
    {% else %}
      <div class="progress-message completed">
        <span class="progress-icon">üéâ</span>
        <span class="progress-text">
          <strong>Congratulations!</strong> You've unlocked all rewards!
        </span>
      </div>
    {% endif %}

    {% comment %} Progress Bar {% endcomment %}
    <div class="progress-track">
      <div class="progress-fill" style="width: {{ progress_percent }}%">
        {% if progress_percent > 0 %}
          <span class="progress-percentage">{{ progress_percent | floor }}%</span>
        {% endif %}
      </div>
    </div>

  </div>
</div>

<style>
.cart-progress-bar-wrapper {
  margin: 16px 0;
  padding: 0;
}

.cart-progress-bar {
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 10px;
  padding: 18px;
  border: 1px solid #e0e0e0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

/* Progress Message */
.progress-message {
    display: flex;
    align-items: center;
    gap: 10px;
    color: #333;
    line-height: 1.5;
}

.progress-message.completed {
  border-left-color: #51cf66;
  background: linear-gradient(90deg, #e7f5e9 0%, #ffffff 100%);
}

.progress-icon {
  font-size: 20px;
  flex-shrink: 0;
  line-height: 1;
}

.progress-text {
  flex: 1;
  font-size: 13px;
  line-height: 1.4;
}

.progress-text strong {
  color: #000;
  font-weight: 600;
}

/* Progress Track */
.progress-track {
  position: relative;
  height: 24px;
  background: #e9ecef;
  border-radius: 12px;
  overflow: hidden;
  margin: 16px 0;
  box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.06);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50 0%, #45a049 100%);
  border-radius: 12px;
  transition: width 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 10px;
  box-shadow: 0 2px 6px rgba(76, 175, 80, 0.3);
}

.progress-percentage {
  color: #fff;
  font-size: 11px;
  font-weight: 700;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  letter-spacing: 0.5px;
}

/* Milestones List */
.milestones-list {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-top: 14px;
}

.milestone-item {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 8px 12px;
  background: #f8f9fa;
  border-radius: 6px;
  font-size: 13px;
  color: #666;
  transition: all 0.3s ease;
  border: 1px solid transparent;
}

.milestone-item.achieved {
  background: linear-gradient(90deg, #e7f5e9 0%, #f8f9fa 100%);
  color: #2d8a3c;
  border-color: #c3e6cb;
}

.milestone-check {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 22px;
  height: 22px;
  border-radius: 50%;
  background: #dee2e6;
  color: #adb5bd;
  font-size: 14px;
  font-weight: bold;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.milestone-item.achieved .milestone-check {
  background: #4CAF50;
  color: #fff;
  animation: checkPulse 0.5s ease;
}

.milestone-label {
  flex: 1;
  font-weight: 500;
  line-height: 1.4;
}

.milestone-item.achieved .milestone-label {
  font-weight: 600;
}

@keyframes checkPulse {
  0% {
    transform: scale(0.8);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* Responsive */
@media screen and (max-width: 767px) {
  .cart-progress-bar {
    padding: 14px;
  }

  .progress-message {
    font-size: 12px;
    padding: 8px 10px;
    gap: 8px;
  }

  .progress-icon {
    font-size: 18px;
  }

  .progress-text {
    font-size: 12px;
  }

  .progress-track {
    height: 20px;
  }

  .progress-percentage {
    font-size: 10px;
    padding-right: 8px;
  }

  .milestone-item {
    font-size: 12px;
    padding: 7px 10px;
  }

  .milestone-check {
    width: 20px;
    height: 20px;
    font-size: 12px;
  }
}

/* Cart Drawer specific styles */
.cart-drawer .cart-progress-bar-wrapper {
  margin: 0 -16px 15px -16px;
  padding: 0;
}

.cart-drawer .cart-progress-bar {
  background: transparent;
  border-radius: 0;
  padding: 0 16px;
  border: none;
  box-shadow: none;
}

.cart-drawer .progress-message {
  margin-bottom: 10px;
  font-size: 10px;
}

.cart-drawer .progress-icon {
  font-size: 14px;
}

.cart-drawer .progress-text {
  font-size: 13px;
  line-height: 1.3;
}

.cart-drawer .progress-track {
  height: 16px;
  margin: 0;
}

.cart-drawer .progress-fill {
  height: 100%;
}

.cart-drawer .progress-percentage {
  font-size: 9px;
  padding-right: 6px;
}

@media screen and (max-width: 767px) {
  .cart-drawer .progress-text {
    font-size: 13px;
  }

  .cart-drawer .progress-icon {
    font-size: 12px;
  }

  .cart-drawer .progress-track {
    height: 16px;
  }

  .cart-drawer .progress-percentage {
    font-size: 8px;
  }
}

/* Main cart footer specific styles */
#main-cart-footer .cart-progress-bar-wrapper {
  margin-bottom: 24px;
}
</style>
