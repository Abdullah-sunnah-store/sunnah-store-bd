<section class="review-section">
  <div class="review-container">
    <div class="review-content">
      <div class="review-text">
        <h2 class="review-title">
          <span class="stars">⭐⭐⭐⭐⭐</span>
          {{ section.settings.title | default: "Customer Reviews" }}
        </h2>

        <div class="review-description">
          {{ section.settings.description | default: "<p>Don't just take our word for it - hear what our amazing customers have to say about their transformative journey with The Collagen Co!</p>" }}
        </div>

        <div class="review-details">
          {{ section.settings.details | default: "<p>Our customers love the visible results they see from our premium collagen products. From glowing skin to stronger hair and nails, thousands of happy customers can't be wrong. Join the community that's already experiencing the difference.</p>" }}
        </div>

        <div class="review-cta">
          {{ section.settings.cta_text | default: "<p>Ready to join thousands of satisfied customers? Start your glow journey today with The EVOA</p>" }}
        </div>
      </div>

      <div class="review-image">
        {% if section.settings.product_image %}
          <img src="{{ section.settings.product_image | img_url: '600x600' }}" 
               alt="{{ section.settings.product_image.alt | default: 'Product Image' }}"
               loading="lazy">
        {% else %}
          <!-- Placeholder for product image -->
          <div class="image-placeholder">
            <span>Product Image</span>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
.review-section {
  padding: 60px 20px;
  background: linear-gradient(135deg, #fff9e6 0%, #ffeaa7 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.review-container {
  max-width: 1200px;
  margin: 0 auto;
}

.review-content {
  display: flex;
  align-items: center;
  gap: 60px;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  padding: 50px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.review-text {
  flex: 1;
  max-width: 500px;
}

.review-title {
  font-size: 32px;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 24px;
  line-height: 1.2;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 8px;
}

.stars {
  font-size: 24px;
  letter-spacing: 2px;
  margin-bottom: 8px;
}

.review-description {
  font-size: 16px;
  line-height: 1.6;
  color: #34495e;
  margin-bottom: 20px;
  font-weight: 500;
}

.review-details {
  font-size: 15px;
  line-height: 1.7;
  color: #5a6c7d;
  margin-bottom: 24px;
}

.review-cta {
  font-size: 15px;
  line-height: 1.6;
  color: #f39c12;
  font-weight: 600;
}

.review-image {
  flex-shrink: 0;
  width: 300px;
  height: 350px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.review-image img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  border-radius: 12px;
}

.image-placeholder {
  width: 100%;
  height: 100%;
  background: #f8f9fa;
  border: 2px dashed #dee2e6;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6c757d;
  font-weight: 500;
}

/* Responsive Design */
@media (max-width: 768px) {
  .review-section {
    padding: 40px 16px;
  }

  .review-content {
    flex-direction: column;
    gap: 40px;
    padding: 30px 20px;
  }

  .review-text {
    max-width: 100%;
    text-align: center;
  }

  .review-title {
    font-size: 28px;
    margin-bottom: 20px;
    align-items: center;
  }

  .stars {
    font-size: 20px;
  }

  .review-image {
    width: 250px;
    height: 300px;
  }
}

@media (max-width: 480px) {
  .review-title {
    font-size: 24px;
  }

  .stars {
    font-size: 18px;
  }

  .review-description,
  .review-details,
  .review-cta {
    font-size: 14px;
  }

  .review-image {
    width: 200px;
    height: 250px;
  }
}
</style>

{% schema %}
{
  "name": "Review Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Customer Reviews"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Review Description",
      "default": "<p>Don't just take our word for it - hear what our amazing customers have to say about their transformative journey with The Collagen Co!</p>"
    },
    {
      "type": "richtext",
      "id": "details",
      "label": "Review Details",
      "default": "<p>Our customers love the visible results they see from our premium collagen products. From glowing skin to stronger hair and nails, thousands of happy customers can't be wrong. Join the community that's already experiencing the difference.</p>"
    },
    {
      "type": "richtext",
      "id": "cta_text",
      "label": "Call to Action Text",
      "default": "<p>Ready to join thousands of satisfied customers? Start your glow journey today with The EVOA</p>"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    }
  ],
  "presets": [
    {
      "name": "Review Section"
    }
  ]
}
{% endschema %}