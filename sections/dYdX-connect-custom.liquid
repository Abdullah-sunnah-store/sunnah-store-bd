{% schema %}
{
  "name": "dYdX Connect",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Connect. See what all the fuss is about!"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "We believe the dYdX community is truly special, made up of talented Hedgies constantly sharing alpha and interesting trading ideas."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Call to Action Text",
      "default": "Want to join?"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "dYdX Discord"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "hedgie_1",
      "label": "Hedgie Image 1"
    },
    {
      "type": "image_picker",
      "id": "hedgie_2",
      "label": "Hedgie Image 2"
    },
    {
      "type": "image_picker",
      "id": "hedgie_3",
      "label": "Hedgie Image 3"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#9966FF"
    }
  ],
  "presets": [
    {
      "name": "dYdX Connect",
      "category": "Custom Content"
    }
  ]
}
{% endschema %}
<div class=" page-width-2">
  <div class=" page-width">
<div class="dydx-connect-container" style="background-color: {{ section.settings.background_color }};">
  <div class="dydx-connect-content">
    <div class="dydx-connect-text">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.description }}</p>
      <p class="dydx-cta">{{ section.settings.cta_text }}</p>
      
      <a href="{{ section.settings.button_link }}" class="dydx-discord-button">
        {{ section.settings.button_text }}
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
    
    <div class="dydx-hedgies">
      {% if section.settings.hedgie_1 %}
        <div class="hedgie hedgie-1">
          <img src="{{ section.settings.hedgie_1 | img_url: '200x200', crop: 'center' }}" alt="Hedgie character" loading="lazy">
        </div>
      {% endif %}
      
      {% if section.settings.hedgie_2 %}
        <div class="hedgie hedgie-2">
          <img src="{{ section.settings.hedgie_2 | img_url: '200x200', crop: 'center' }}" alt="Hedgie character" loading="lazy">
        </div>
      {% endif %}
      
      {% if section.settings.hedgie_3 %}
        <div class="hedgie hedgie-3">
          <img src="{{ section.settings.hedgie_3 | img_url: '200x200', crop: 'center' }}" alt="Hedgie character" loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
</div>
</div>
</div>
<style>
   .page-width-2{
  background-image: url('https://cdn.shopify.com/s/files/1/0934/9539/4644/files/Untitled-3.png?v=1748084444');
    background-color: #0c150d;
 
  }
.dydx-connect-container {
  padding: 3rem 2rem;
  border-radius: 1.5rem;
  color: white;
  position: relative;
  overflow: hidden;
  margin: 40px;
  max-width: 100%;
  z-index: 1;
}

.dydx-connect-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
}

.dydx-connect-text {
  flex: 1;
  padding: 0px 100px;
}

.dydx-connect-text h2 {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  line-height: 1.2;
}

.dydx-connect-text p {
  font-size: 1rem;
  line-height: 1.5;
  margin-bottom: 1rem;
}

.dydx-cta {
  font-size: 1.1rem;
  font-weight: 500;
  margin: 1.5rem 0;
}

.dydx-discord-button {
  display: inline-flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.9);
  color: #333;
  padding: 0.75rem 1.5rem;
  border-radius: 2rem;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
}

.dydx-discord-button svg {
  margin-left: 0.5rem;
}

.dydx-discord-button:hover {
  background-color: white;
  transform: translateY(-2px);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.dydx-hedgies {
  flex: 1;
  position: relative;
  height: 300px;
}

.hedgie {
  position: absolute;
  width: 120px;
  height: 120px;
  border-radius: 50%;
  overflow: hidden;
  background-color: white;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.hedgie img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hedgie-1 {
  top: 75%;
  left: 30%;
  transform: translateY(-80%);
}

.hedgie-2 {
  top: 20%;
  left: 45%;
}

.hedgie-3 {
  top: 55%;
  left: 50%;
}
