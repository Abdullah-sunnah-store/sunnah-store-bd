  transform: translateY(0);
}

.new-sports-category__cta-button {
  display: inline-block;
  background: #fff;
  color: #000;
  padding: 10px 20px;
  border-radius: 50px;
  font-size: 12px;
  font-weight: 600;
  text-transform: capitalize;
  letter-spacing: 0.5px;
  text-shadow: none;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

