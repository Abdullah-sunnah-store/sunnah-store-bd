  transform: scale(1.02);
}

.custom-sec-sports-category__image-wrapper {
  position: relative;
  width: 100%;
  height: 240px;
  overflow: hidden;
  background: #f8f9fa;
}

.custom-sec-sports-category__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.custom-sec-sports-category__card:hover .custom-sec-sports-category__image {
  transform: scale(1.1);
}

.custom-sec-sports-category__placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e1 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #64748b;
