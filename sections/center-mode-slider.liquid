  opacity: 0.6;
}

.custom-sec-sports-category__content {
  padding: 24px;
  text-align: left;
}

.custom-sec-sports-category__title {
  font-size: 1.5rem;
  font-weight: 700;
  margin: 0 0 8px 0;
  color: #1e293b;
  line-height: 1.3;
