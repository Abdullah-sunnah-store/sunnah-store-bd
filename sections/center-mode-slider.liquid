<script>
document.addEventListener('DOMContentLoaded', function () {
  const carousel = document.getElementById('customSecSportsCategoriesCarousel');
  const track = document.getElementById('customSecSportsCategoriesTrack');
  const dotsContainer = document.getElementById('customSecSportsCategoriesDots');
  const prevBtn = document.getElementById('customSecPrevBtn');
  const nextBtn = document.getElementById('customSecNextBtn');
  
  if (!carousel || !track || !dotsContainer) return;

  let categories = track.querySelectorAll('.custom-sec-sports-category');
  let dots = [];
  let currentIndex = 0;
  let categoriesToShow = getCategoriesToShow();
  let autoSlideInterval;
  let isTransitioning = false;
  let originalCategoriesCount = categories.length;

  function getCategoriesToShow() {
    if (window.innerWidth >= 1200) return 4;
    if (window.innerWidth >= 1024) return 3;
    if (window.innerWidth >= 768) return 2;
    return 1;
  }

  function createDots() {
    dotsContainer.innerHTML = '';
    dots = [];
    
    const totalSlides = Math.max(1, originalCategoriesCount - categoriesToShow + 1);
    
    for (let i = 0; i < totalSlides; i++) {
      const dot = document.createElement('button');
      dot.className = 'custom-sec-sports-categories__dot';
      dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
      dot.addEventListener('click', () => goToSlide(i));
      dotsContainer.appendChild(dot);
      dots.push(dot);
    }
    
    updateDots();
  }

  function updateDots() {
    dots.forEach((dot, index) => {
      dot.classList.toggle('custom-sec-sports-categories__dot--active', index === currentIndex);
    });
  }

  function goToSlide(slideIndex) {
    if (isTransitioning) return;
    
    stopAutoSlide();
    currentIndex = Math.max(0, Math.min(slideIndex, originalCategoriesCount - categoriesToShow));
    updateCarousel();
    updateDots();
    
    setTimeout(startAutoSlide, 4000);
  }

  function updateCarousel() {
    const categoryWidth = categories[0].offsetWidth;
    const gap = parseInt(getComputedStyle(track).gap) || 24;
    const offset = currentIndex * (categoryWidth + gap);

    track.style.transform = `translateX(-${offset}px)`;
    updateDots();
    updateNavigationButtons();
  }

  function updateNavigationButtons() {
    if (prevBtn && nextBtn) {
      prevBtn.style.opacity = currentIndex === 0 ? '0.5' : '1';
      nextBtn.style.opacity = currentIndex >= originalCategoriesCount - categoriesToShow ? '0.5' : '1';
      
      prevBtn.style.pointerEvents = currentIndex === 0 ? 'none' : 'auto';
      nextBtn.style.pointerEvents = currentIndex >= originalCategoriesCount - categoriesToShow ? 'none' : 'auto';
    }
  }

  function nextSlide() {
    if (isTransitioning || currentIndex >= originalCategoriesCount - categoriesToShow) return;
    
    isTransitioning = true;
    currentIndex++;
    updateCarousel();
    
    setTimeout(() => {
      isTransitioning = false;
    }, 600);
  }

  function prevSlide() {
    if (isTransitioning || currentIndex <= 0) return;
    
    isTransitioning = true;
    currentIndex--;
    updateCarousel();
    
    setTimeout(() => {
      isTransitioning = false;
    }, 600);
  }

  function startAutoSlide() {
    const speed = getAnimationSpeed();
    autoSlideInterval = setInterval(() => {
      if (!isTransitioning) {
        if (currentIndex >= originalCategoriesCount - categoriesToShow) {
          currentIndex = 0;
        } else {
          currentIndex++;
        }
        updateCarousel();
      }
    }, speed);
  }

  function stopAutoSlide() {
    clearInterval(autoSlideInterval);
  }

  function getAnimationSpeed() {
    const animationSpeed = '{{ section.settings.animation_speed | default: "normal" }}';
    switch(animationSpeed) {
      case 'fast': return 3000;
      case 'slow': return 8000;
      default: return 5000;
    }
  }

  // Event listeners
  if (prevBtn) prevBtn.addEventListener('click', () => {
    prevSlide();
    stopAutoSlide();
    setTimeout(startAutoSlide, 4000);
  });

  if (nextBtn) nextBtn.addEventListener('click', () => {
    nextSlide();
    stopAutoSlide();
    setTimeout(startAutoSlide, 4000);
  });

  carousel.addEventListener('mouseenter', stopAutoSlide);
  carousel.addEventListener('mouseleave', startAutoSlide);

  // Touch support
  let touchStartX = 0;
  let touchEndX = 0;

  carousel.addEventListener('touchstart', (e) => {
    touchStartX = e.changedTouches[0].screenX;
    stopAutoSlide();
  });

  carousel.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
    setTimeout(startAutoSlide, 3000);
  });

  function handleSwipe() {
    const swipeThreshold = 50;
    const diff = touchStartX - touchEndX;
    
    if (Math.abs(diff) > swipeThreshold) {
      if (diff > 0 && currentIndex < originalCategoriesCount - categoriesToShow) {
        nextSlide();
      } else if (diff < 0 && currentIndex > 0) {
        prevSlide();
      }
    }
  }

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') {
      prevSlide();
      stopAutoSlide();
      setTimeout(startAutoSlide, 4000);
    } else if (e.key === 'ArrowRight') {
      nextSlide();
      stopAutoSlide();
      setTimeout(startAutoSlide, 4000);
    }
  });

  // Responsive handling
  window.addEventListener('resize', () => {
    const newCategoriesToShow = getCategoriesToShow();
    if (newCategoriesToShow !== categoriesToShow) {
      categoriesToShow = newCategoriesToShow;
      currentIndex = Math.min(currentIndex, originalCategoriesCount - categoriesToShow);
      createDots();
      updateCarousel();
      stopAutoSlide();
      startAutoSlide();
    }
  });

  // Initialize
  if (categories.length > 0) {
    createDots();
    updateCarousel();
    startAutoSlide();
  }
});
</script>

