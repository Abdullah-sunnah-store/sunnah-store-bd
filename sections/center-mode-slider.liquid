{% comment %}
  Sports Category Section with Modern Card Design
  Updated to match the styling from the reference images
{% endcomment %}

<section class="custom-sec-sports-categories">
  <div class="custom-sec-sports-categories__scroll-container" id="customSecSportsCategoriesCarousel">
    <div class="custom-sec-sports-categories__scroll-content" id="customSecSportsCategoriesTrack">
      {% for block in section.blocks %}
        <div class="custom-sec-sports-category" {{ block.shopify_attributes }}>
          {% if block.settings.category_link != blank %}
            <a href="{{ block.settings.category_link }}" class="custom-sec-sports-category__link">
          {% endif %}
          
          <div class="custom-sec-sports-category__card">
            <div class="custom-sec-sports-category__image-wrapper">
              {% if block.settings.category_image != blank %}
                {{ block.settings.category_image | image_url: width: 600 | image_tag: 
                   loading: 'lazy',
                   class: 'custom-sec-sports-category__image',
                   alt: block.settings.category_title }}
              {% else %}
                <div class="custom-sec-sports-category__placeholder">
                  <div class="custom-sec-sports-category__placeholder-icon">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M21 19V5C21 3.9 20.1 3 19 3H5C3.9 3 3 3.9 3 5V19C3 20.1 3.9 21 5 21H19C20.1 21 21 20.1 21 19ZM8.5 13.5L11 16.51L14.5 12L19 18H5L8.5 13.5Z" fill="currentColor"/>
                    </svg>
                  </div>
                </div>
              {% endif %}
            </div>
            
            <div class="custom-sec-sports-category__content">
              <h3 class="custom-sec-sports-category__title">{{ block.settings.category_title }}</h3>
              <p class="custom-sec-sports-category__subtitle">{{ block.settings.category_subtitle }}</p>
              <div class="custom-sec-sports-category__cta">
                <span class="custom-sec-sports-category__cta-text">Explore</span>
                <svg class="custom-sec-sports-category__cta-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </div>
          </div>
          
          {% if block.settings.category_link != blank %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
  
  <!-- Navigation Arrows -->
  <button class="custom-sec-sports-categories__nav custom-sec-sports-categories__nav--prev" id="customSecPrevBtn" aria-label="Previous slide">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>
  
  <button class="custom-sec-sports-categories__nav custom-sec-sports-categories__nav--next" id="customSecNextBtn" aria-label="Next slide">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>
  
  <!-- Dot Navigation -->
  <div class="custom-sec-sports-categories__dots" id="customSecSportsCategoriesDots">
    <!-- Dots will be generated by JavaScript -->
  </div>
</section>

<style>
