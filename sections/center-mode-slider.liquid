.custom-sec-sports-category__cta {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: #000;
  color: white;
  padding: 10px 20px;
  border-radius: 50px;
  font-size: 0.9rem;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
}

.custom-sec-sports-category__cta:hover {
  background: #333;
  transform: translateX(4px);
}

.custom-sec-sports-category__cta-arrow {
  transition: transform 0.3s ease;
}

.custom-sec-sports-category__cta:hover .custom-sec-sports-category__cta-arrow {
  transform: translateX(4px);
}

/* Navigation Arrows */
.custom-sec-sports-categories__nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  z-index: 10;
  color: #333;
}

.custom-sec-sports-categories__nav:hover {
  background: white;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  transform: translateY(-50%) scale(1.1);
}

.custom-sec-sports-categories__nav--prev {
  left: 20px;
}

.custom-sec-sports-categories__nav--next {
  right: 20px;
}

/* Dot Navigation */
.custom-sec-sports-categories__dots {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12px;
  padding: 0 60px;
  margin-top: 1rem;
}

.custom-sec-sports-categories__dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.4);
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
  padding: 0;
  position: relative;
  backdrop-filter: blur(10px);
}

.custom-sec-sports-categories__dot:hover {
  background-color: rgba(255, 255, 255, 0.7);
  transform: scale(1.2);
}

.custom-sec-sports-categories__dot--active {
  background-color: white;
  transform: scale(1.3);
  box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.3);
}

.custom-sec-sports-categories__dot--active::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  border-radius: 50%;
  background: linear-gradient(45deg, transparent, rgba(255,255,255,0.5), transparent);
  animation: dotRotate 3s linear infinite;
}

@keyframes dotRotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

