  color: #fff;
  border-color: #000;
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.featured-products-add-to-cart-btn:hover svg {
  transform: scale(1.1);
}

.featured-products-add-to-cart-btn:active {
  transform: translateY(0);
}

.featured-products-product-info {
    padding: 20px;
    text-align: center;
}
.featured-products-product-title {
  font-size: 14px;
  font-weight: 600;
  color: #333;
  margin: 0 0 10px 0;
  line-height: 1.3;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
