{% schema %}
{
  "name": "Product Categories",
  "tag": "section",
  "class": "product-categories-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Build Your Wardrobe"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Shop by Product Category"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#10121F"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "limit": 4,
      "settings": [
        
        {
          "type": "text",
          "id": "heading_2",
          "label": "Heading",
          "default": "Build Your Wardrobe"
        },
        {
          "type": "richtext",
          "id": "subheading_2",
          "label": "Subheading",
          "default": "<p>Shop by Product Category</p>"
        },
        {
          "type": "text",
          "id": "category_name",
          "label": "Category Name",
          "default": "Category"
        },
        {
          "type": "url",
          "id": "category_link",
          "label": "Category Link"
        },
        {
          "type": "image_picker",
          "id": "category_image",
          "label": "Category Image"
        },
        {
        "type": "text",
        "id": "background_color",
        "label": "Background (Color or Gradient)",
        "default": "linear-gradient(135deg, #FF85C7 0%, #FFC3A0 100%)",
        "info": "You can use a solid color (e.g., #FF85C7) or a CSS gradient (e.g., linear-gradient(135deg, #FF85C7 0%, #FFC3A0 100%))"
      }

      ]
    }
  ],
  "presets": [
    {
      "name": "Product Categories",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "category_name": "T-Shirts",
            "background_color": "#FF85C7"
          }
        },
        {
          "type": "category",
          "settings": {
            "category_name": "Headwear",
            "background_color": "#7F66FF"
          }
        },
        {
          "type": "category",
          "settings": {
            "category_name": "Hoodies",
            "background_color": "#FFB546"
          }
        },
        {
          "type": "category",
          "settings": {
            "category_name": "Accessories",
            "background_color": "#21C8D7"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<style>

  .product-categories-section {
    position: relative;
    overflow: hidden;
    background-color: #0c150d !important;
    background-image: url('https://cdn.shopify.com/s/files/1/0934/9539/4644/files/Untitled-3.png?v=1748084444');
  }

  .categories-container {
    max-width: 1000px;
    margin: 60px auto;
    background: rgba(25, 28, 43, 0.8);
    border-radius: 20px;
    padding: 40px 20px;
    position: relative;
    z-index: 2;
  }

  .categories-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .categories-header h3 {
    color: #fff;
    font-size: 18px;
    margin-bottom: 10px;
    font-weight: 500;
    margin-top: 0;
  }

  .categories-header h2 {
    color: #fff;
    font-size: 42px;
    font-weight: 700;
    margin: 0;
    
  }

  .categories-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    width: calc(100% + 200px);
    margin: 80px -100px 40px -100px;
  }

  .category-card {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
    min-height: 240px;
  }

  .category-card:nth-child(2n) {
    transform: translateY(-4rem);
  }

  .category-card img {
    position: absolute;
    right: 10px;
    max-height: 80%;
    object-fit: cover;
    top: 25px;
    border-radius: 15px;
  }

.category-label {
  position: absolute;
  bottom: 30px;
  left: 30px;
  font-weight: 600;
  color: #000;
  background: #fff;
  overflow: hidden;
  transition: all 0.3s ease;
  align-items: center;
  display: flex;
  letter-spacing: 1px;
  padding: 10px 15px;
  border: 1px solid #fff;
  border-radius: 25px;
  z-index: 0; /* Required for shine layering */
}

/* Shine layer */
.category-label::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 150%;
  height: 100%;
  background: linear-gradient(
    90deg,
    rgba(255, 255, 255, 0) 50%,
    rgba(255, 255, 255, 0.4) 70%,
    rgba(255, 255, 255, 0) 80%
  );
  transform: translateX(-100%);
  z-index: 1;
  pointer-events: none;
}

/* Infinite shine animation on hover */
.category-label:hover::before {
  animation: smooth-shine 2s ease-in-out infinite;
}

/* Keep text/content above shine */
.category-label > * {
  position: relative;
  z-index: 2;
}

/* Reuse the keyframes */
@keyframes smooth-shine {
  0% {
    transform: translateX(-100%);
  }
  50% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(100%);
  }
}

  .grid-header {
    position: absolute;
    top: 30px;
    left: 0;
    padding: 15px 30px;
    width: 70%;
  }

  .grid-title {
    font-size: 20px;
    font-weight: 700;
    color: #fff;
    margin: 0 0 5px 0;
  }

  .grid-subtitle {
    font-size: 14px;
    font-weight: 500;
    color: #ddd;
    margin: 0;
    opacity: 0.8;
  }

  /* Medium Screens */
  @media screen and (min-width: 769px) and (max-width: 1350px) {
    .category-card:nth-child(2n) {
      transform: translateY(0rem);
    }

    .categories-grid {
      grid-template-columns: 1fr;
      width: 100%;
      margin: unset;
    }
  }

  /* Mobile Screens */
  @media screen and (max-width: 768px) {
    .categories-grid {
      grid-template-columns: 1fr;
      width: 100%;
      margin: unset;
    }
    .categories-grid a .custom-collection-image-text {
      width: 100%;
    }
    
    .categories-container{
      margin: 0 15px;
    }
    .categories-header h3 {
      font-size: 18px;
    }
   .categories-header h2 {
    font-size: 32px;
    }
    .category-card:nth-child(2n) {
      transform: translateY(0rem);
    }

    .category-card {
      flex-direction: column;
      align-items: flex-start;
      padding: 20px;
      min-height: unset;
      text-decoration: none;
    }

    .category-card img {
      position: static;
      max-width: 100%;
      width: 100%;
      max-height: 150px;
      margin-bottom: 20px;
      object-fit: contain;
    }

    .custom-collection-text {
      width: 100%;
    }

    .grid-header {
      position: static;
      padding: 0;
      width: 100%;
      margin-bottom: 15px;
    }

    .grid-title {
      font-size: 18px;
    }

    .grid-subtitle {
      font-size: 14px;
    }

    .category-label {
      position: static;
      margin-top: 15px;
      display: inline-block;
      align-items: center;
      display: flex;
      justify-content: center;
      width: fit-content;
      font-weight: 600;
    }
  }
</style>

<div class=" page-width-3">
<div class="product-categories-section" style="background-color: {{ section.settings.background_color }};">
 
  
  <div class="categories-container">
    <div class="categories-header">
      <h3>{{ section.settings.heading }}</h3>
      <h2>{{ section.settings.subheading }}</h2>
    </div>
    
    <div class="categories-grid">
      {% for block in section.blocks %}
        {% if block.type == "category" %}
         <a href="{{ block.settings.category_link }}" class="category-card" style="background: {{ block.settings.background_color }} !important;">
           <div class="custom-collection-image-text">
            {% if block.settings.category_image %}
              <img src="{{ block.settings.category_image | img_url: 'medium' }}" alt="{{ block.settings.category_name }}">
            {% endif %}
            <div class="custom-collection-text">
            <div class="grid-header">
            <h2 class="grid-title">{{ block.settings.heading_2 }}</h2>
            <h3 class="grid-subtitle">{{ block.settings.subheading_2 }}</h3>
            </div>
            <div class="category-label">{{ block.settings.category_name }}
          <!-- <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="arrow-icon">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg> -->
            </div>
           </div>
           </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
</div>
