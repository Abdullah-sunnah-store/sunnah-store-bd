<div class="cus-new-released-section" style="padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;">
  <div class="cus-container">
    {% if section.settings.show_header %}
      <div class="cus-section-header">
        <h2 class="cus-section-title">{{ section.settings.section_title }}</h2>
        {% if section.settings.show_view_all and section.settings.collection != blank %}
          <a href="{{ collections[section.settings.collection].url }}" class="cus-view-all-link">
            {{ section.settings.view_all_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}

    <div class="cus-product-grid" style="grid-template-columns: repeat({{ section.settings.products_per_row }}, 1fr);">
      {% if section.settings.collection != blank %}
        {% for product in collections[section.settings.collection].products limit: section.settings.products_to_show %}
          <div class="cus-product-card" data-product-id="{{ product.id }}">
            <div class="cus-product-image-container">
              <a href="{{ product.url }}" class="cus-product-link">
                {% if product.featured_image %}
                  <img src="{{ product.featured_image | img_url: '400x400' }}" 
                       alt="{{ product.title }}" 
                       class="cus-product-image"
                       loading="lazy">
                {% else %}
                  <div class="cus-no-image-placeholder">
                    <span>{{ section.settings.no_image_text }}</span>
                  </div>
                {% endif %}
              </a>

              {% if section.settings.show_add_to_cart %}
                <div class="cus-add-to-bag-overlay">
                  <button class="cus-add-to-bag-btn" 
                          data-product-id="{{ product.id }}"
                          data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                          {% unless product.available %}disabled{% endunless %}>
                    <span class="cart-btn-text">
                      {% if product.available %}
                        {{ section.settings.add_to_cart_text }}
                      {% else %}
                        {{ section.settings.sold_out_text }}
                      {% endif %}
                    </span>
                    <svg width="18" height="18" viewBox="0 0 16 16" fill="none">
                      <path d="M3 3H5L7 11H13L15 5H6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                      <circle cx="8" cy="14" r="1" stroke="currentColor" stroke-width="1.5"/>
                      <circle cx="12" cy="14" r="1" stroke="currentColor" stroke-width="1.5"/>
                    </svg>
                  </button>
                </div>
              {% endif %}

              
            </div>

            <div class="cus-product-info">
              <h3 class="cus-product-title">
                <a href="{{ product.url }}">
                  {% if section.settings.uppercase_titles %}
                    {{ product.title | upcase }}
                  {% else %}
                    {{ product.title }}
                  {% endif %}
                </a>
              </h3>
              {% if section.settings.show_sale_badge and product.compare_at_price > product.price %}
                <!-- <div class="cus-sale-badge">
                  {{ section.settings.sale_badge_text }} {{ product.compare_at_price | minus: product.price | money_without_trailing_zeros }}
                </div> -->
              {% endif %}
              <div class="cus-product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="cus-compare-price">{{ product.compare_at_price | money_without_trailing_zeros }}</span>
                {% endif %}
                <span class="cus-current-price">{{ product.price | money_without_trailing_zeros }}</span>
              </div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        {% for i in (1..section.settings.products_to_show) %}
          <div class="cus-product-card cus-placeholder-card">
            <div class="cus-product-image-container">
              <div class="cus-no-image-placeholder">
                <span>Product {{ i }}</span>
              </div>
              {% if section.settings.show_add_to_cart %}
                <div class="cus-add-to-bag-overlay">
                  <button class="cus-add-to-bag-btn" disabled>
                    <span class="cart-btn-text">{{ section.settings.add_to_cart_text }}</span>
                    <svg width="18" height="18" viewBox="0 0 16 16" fill="none">
                      <path d="M3 3H5L7 11H13L15 5H6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                      <circle cx="8" cy="14" r="1" stroke="currentColor" stroke-width="1.5"/>
                      <circle cx="12" cy="14" r="1" stroke="currentColor" stroke-width="1.5"/>
                    </svg>
                  </button>
                </div>
              {% endif %}
            </div>
            <div class="cus-product-info">
              <h3 class="cus-product-title">
                <a href="#">Sample Product Title</a>
              </h3>
              <div class="cus-product-price">
                <span class="cus-current-price">{{ 100 | money_without_trailing_zeros }}</span>
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>


