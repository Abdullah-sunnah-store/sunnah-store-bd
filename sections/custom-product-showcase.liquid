{% comment %}
  Product Showcase Section with Dynamic Desktop Columns
  Displays products with images, titles, and CTA buttons
  Desktop: Uses configurable column layout with 100% width
  Mobile: Horizontal scroll functionality
{% endcomment %}

<div class="cus-pro-product-showcase-section" data-desktop-columns="{{ section.settings.desktop_columns }}">
  <div class="cus-pro-container">
    {% if section.settings.section_title != blank %}
      <h2 class="cus-pro-section-title">{{ section.settings.section_title }}</h2>
    {% endif %}
    
    <div class="cus-pro-product-grid">
      {% for block in section.blocks %}
        <div class="cus-pro-product-item" {{ block.shopify_attributes }}>
          {% if block.settings.product_link != blank %}
            <a href="{{ block.settings.product_link }}" class="cus-pro-product-link">
          {% endif %}
          
          <div class="cus-pro-product-image-wrapper">
            {% if block.settings.product_image != blank %}
              <img 
                src="{{ block.settings.product_image | img_url: '400x400' }}" 
                alt="{{ block.settings.product_title | escape }}"
                class="cus-pro-product-image"
                loading="lazy"
              />
            {% else %}
              <div class="cus-pro-placeholder-image">
                <svg width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <rect width="100" height="100" fill="#f0f0f0"/>
                  <path d="M30 70V30H70V70H30Z" stroke="#ccc" stroke-width="2" fill="none"/>
                  <circle cx="42" cy="42" r="4" fill="#ccc"/>
                  <path d="M35 60L45 50L55 60H35Z" fill="#ccc"/>
                </svg>
              </div>
            {% endif %}
          </div>
          
          {% if block.settings.product_link != blank %}
            </a>
          {% endif %}
          
          <div class="cus-pro-product-content">
            <h3 class="cus-pro-product-title">{{ block.settings.product_title | default: 'Product Title' }}</h3>
            
            {% if block.settings.product_description != blank %}
              <p class="cus-pro-product-description">{{ block.settings.product_description }}</p>
            {% endif %}
            
            {% if block.settings.cta_text != blank and block.settings.cta_link != blank %}
              <a href="{{ block.settings.cta_link }}" class="cus-pro-cta-button">
                {{ block.settings.cta_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .cus-pro-product-showcase-section {
    padding: 0;
    background-color: {{ section.settings.background_color | default: '#FAFAFA' }};
    width: 100%;
    box-sizing: border-box;
  }

  .cus-pro-container {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 20px;
    width: 100%;
    box-sizing: border-box;
  }

  .cus-pro-section-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 3rem;
    color: {{ section.settings.title_color | default: '#333333' }};
  }

  .cus-pro-product-grid {
    display: flex;
    gap: 8px;
    width: 100%;
    margin-top: 2rem;
    box-sizing: border-box;
    /* Desktop: flex-wrap to show all items */
    flex-wrap: wrap;
    justify-content: stretch;
  }

  .cus-pro-product-item {
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    /* Desktop: Dynamic width based on columns */
    flex: 1;
    min-width: 0; /* Allow shrinking */
    box-sizing: border-box;
  }

  .cus-pro-product-item:hover {
    transform: translateY(-2px);
  }

  .cus-pro-product-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .cus-pro-product-image-wrapper {
    position: relative;
    width: 100%;
    height: 450px;
    overflow: hidden;
    background: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cus-pro-product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .cus-pro-product-item:hover .cus-pro-product-image {
    transform: scale(1.05);
  }

  .cus-pro-placeholder-image {
    width: 100px;
    height: 100px;
    opacity: 0.5;
  }

  .cus-pro-product-content {
    padding: 1.5rem 0;
    background: white;
  }

  .cus-pro-product-title {
    font-size: 2rem;
    font-weight: 600;
    color: {{ section.settings.text_color | default: '#333333' }};
    margin: 0;
  }

  .cus-pro-product-description {
    font-size: 0.9rem;
    color: {{ section.settings.description_color | default: '#666666' }};
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .cus-pro-cta-button {
    display: inline-block;
    background: {{ section.settings.button_color | default: '#007bff' }};
    color: {{ section.settings.button_text_color | default: '#ffffff' }};
    padding: 12px 24px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .cus-pro-cta-button:hover {
    background: {{ section.settings.button_hover_color | default: '#0056b3' }};
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
  }

  /* Dynamic Desktop Column Layout - Always 100% width */
  @media (min-width: 769px) {
    .cus-pro-product-grid {
      justify-content: stretch;
    }
    
    /* 1 Column */
    .cus-pro-product-showcase-section[data-desktop-columns="1"] .cus-pro-product-item {
      flex: 0 0 100%;
      max-width: 800px;
      margin: 0 auto;
    }
    
    /* 2 Columns */
    .cus-pro-product-showcase-section[data-desktop-columns="2"] .cus-pro-product-item {
      flex: 0 0 calc(50% - 4px);
      min-width: 250px;
    }
    
    /* 3 Columns */
    .cus-pro-product-showcase-section[data-desktop-columns="3"] .cus-pro-product-item {
      flex: 0 0 calc(33.333% - 5.33px);
      min-width: 220px;
    }
    
    /* 4 Columns */
    .cus-pro-product-showcase-section[data-desktop-columns="4"] .cus-pro-product-item {
      flex: 0 0 calc(25% - 6px);
      min-width: 200px;
    }
    
    /* 5 Columns */
    .cus-pro-product-showcase-section[data-desktop-columns="5"] .cus-pro-product-item {
      flex: 0 0 calc(20% - 6.4px);
      min-width: 180px;
    }
    
    /* 6 Columns */
    .cus-pro-product-showcase-section[data-desktop-columns="6"] .cus-pro-product-item {
      flex: 0 0 calc(16.666% - 6.67px);
      min-width: 160px;
    }
    
    /* Auto (default) - Equal distribution */
    .cus-pro-product-showcase-section[data-desktop-columns="auto"] .cus-pro-product-item {
      flex: 1 1 0;
      min-width: 250px;
    }
  }

  /* Medium screens adjustments */
  @media (min-width: 769px) and (max-width: 1200px) {
    /* Reduce to fewer columns on medium screens if necessary */
    .cus-pro-product-showcase-section[data-desktop-columns="6"] .cus-pro-product-item {
      flex: 0 0 calc(25% - 6px);
      min-width: 180px;
    }
    
    .cus-pro-product-showcase-section[data-desktop-columns="5"] .cus-pro-product-item {
      flex: 0 0 calc(33.333% - 5.33px);
      min-width: 180px;
    }
  }

  /* Large screens */
  @media (min-width: 1201px) {
    /* All column layouts work well on large screens */
    .cus-pro-product-showcase-section[data-desktop-columns="1"] .cus-pro-product-item {
      max-width: 1000px;
    }
    
    .cus-pro-product-showcase-section[data-desktop-columns="2"] .cus-pro-product-item {
      min-width: 300px;
    }
    
    .cus-pro-product-showcase-section[data-desktop-columns="3"] .cus-pro-product-item {
      min-width: 280px;
    }
    
    .cus-pro-product-showcase-section[data-desktop-columns="4"] .cus-pro-product-item {
      min-width: 250px;
    }
    
    .cus-pro-product-showcase-section[data-desktop-columns="5"] .cus-pro-product-item {
      min-width: 220px;
    }
    
    .cus-pro-product-showcase-section[data-desktop-columns="6"] .cus-pro-product-item {
      min-width: 200px;
    }
    
    .cus-pro-product-showcase-section[data-desktop-columns="auto"] .cus-pro-product-item {
      min-width: 280px;
    }
  }

  /* Mobile Responsive Design with Horizontal Scroll */
  @media (max-width: 768px) {
    .cus-pro-product-showcase-section {
      padding: 20px 0;
    }
    
    .cus-pro-container {
      padding: 0;
    }
    
    .cus-pro-section-title {
      font-size: 2rem;
      margin-bottom: 2rem;
      padding: 0 20px;
    }
    
    .cus-pro-product-grid {
      display: flex;
      overflow-x: auto;
      gap: 5px;
      padding: 0 20px;
      margin-top: 2rem;
      scroll-behavior: smooth;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none; /* Firefox */
      -ms-overflow-style: none; /* IE and Edge */
      flex-wrap: nowrap; /* Prevent wrapping on mobile */
      justify-content: flex-start;
    }
    
    /* Hide scrollbar for Chrome, Safari and Opera */
    .cus-pro-product-grid::-webkit-scrollbar {
      display: none;
    }
    
    .cus-pro-product-item {
      flex: 0 0 280px;
      min-width: 250px;
      max-width: 436px;
    }
    
    .cus-pro-product-image-wrapper {
      height: 400px;
    }
    
    .cus-pro-product-content {
      padding: 1rem;
    }
    
    .cus-pro-product-title {
      font-size: 1.6rem;
    }
    
    .cus-pro-product-description {
      font-size: 0.85rem;
    }
    
    .cus-pro-cta-button {
      padding: 10px 20px;
      font-size: 0.8rem;
    }
  }

  /* Small mobile devices */
  @media (max-width: 480px) {
    .cus-pro-product-item {
      flex: 0 0 250px;
      min-width: 220px;
      max-width: 436px;
    }
    
    .cus-pro-product-image-wrapper {
      height: 350px;
    }
    
    .cus-pro-section-title {
      font-size: 1.8rem;
    }
    
    .cus-pro-product-content {
      padding: 0.8rem;
    }
  }
</style>

