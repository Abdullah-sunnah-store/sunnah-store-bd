{% comment %}
  Sports Category Section with Infinite Loop Animation and Dot Navigation
  Displays sport categories with continuous scrolling animation and dot indicators
{% endcomment %}

<section class="sports-categories">
  <div class="sports-categories__scroll-container" id="sportsCategoriesCarousel">
    <div class="sports-categories__title">
        <h2> {{ section.settings.heading_text }}</h2>
       <p> {{ section.settings.sub_heading_text }}</p>
      </div>
    <div class="sports-categories__scroll-content" id="sportsCategoriesTrack">
      
      {% for block in section.blocks %}
        <div class="sports-category" {{ block.shopify_attributes }}>
          {% if block.settings.category_link != blank %}
            <a href="{{ block.settings.category_link }}" class="sports-category__link">
          {% endif %}
          
          <div class="sports-category__image-wrapper">
            {% if block.settings.category_image != blank %}
              {{ block.settings.category_image | image_url: width: 600 | image_tag: 
                 loading: 'lazy',
                 class: 'sports-category__image',
                 alt: block.settings.category_title }}
            {% else %}
              <div class="sports-category__placeholder">
                <span>{{ block.settings.category_title | default: 'Category Image' }}</span>
              </div>
            {% endif %}
            
            <div class="sports-category__overlay">
              <div class="sports-category__content">
                <h3 class="sports-category__title">{{ block.settings.category_title }}</h3>
                <p class="sports-category__subtitle">{{ block.settings.category_subtitle }}</p>
                
                <!-- CTA Button -->
                <div class="sports-category__cta">
                  <span class="sports-category__cta-button">
                    {{ block.settings.cta_text | default: 'Customize Yours' }}
                  </span>
                </div>
              </div>
            </div>
          </div>
          
          {% if block.settings.category_link != blank %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
  
  <!-- Dot Navigation -->
  <div class="sports-categories__dots" id="sportsCategoriesDots">
    <!-- Dots will be generated by JavaScript -->
  </div>
</section>

<style>
.sports-categories {
  background-color: #f8f9fa;
  position: relative;
  max-width: 100%;
  margin: 0 auto;
  box-sizing: border-box;
}

.sports-categories__scroll-container {
  width: 100%;
  overflow: hidden;
  position: relative;
  margin-bottom: 2rem;
  box-sizing: border-box;
}

.sports-categories__scroll-content {
  display: flex;
  gap: 10px;
  width: fit-content;
  padding: 0;
  transition: transform 0.5s ease;
  box-sizing: border-box;
}

  .sports-categories__title{
    color: #333;
    font-weight: 400 !important;
    line-height: 1.3;
    word-break: break-word;
    font-family: circular std !important;
