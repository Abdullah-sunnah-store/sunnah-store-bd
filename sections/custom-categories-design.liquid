     .sports-categories__title p{
       font-size: 14px;
  }
  .sports-categories__scroll-content {
    gap: 1rem;
  }
  
  .sports-category {
    width: 400px;
  }
  
  .sports-category__image-wrapper {
    height: 450px;
  }
  
  .sports-category__title {
    font-size: 18px;
  }
  
  .sports-category__subtitle {
    font-size: 1.2rem;
  }
  
  .sports-category__overlay {
