.sports-category__image-wrapper {
  position: relative;
  width: 100%;
  height: 550px;
  overflow: hidden;
  box-sizing: border-box;
}

.sports-category__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
  border: none;
  outline: none;
}

.sports-category:hover .sports-category__image {
  transform: scale(1.05);
}

.sports-category__placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 1.2rem;
  font-weight: 600;
  box-sizing: border-box;
}

.sports-category__overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 2rem 2rem 2.5rem;
  color: white;
  box-sizing: border-box;
}

.sports-category__content {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.sports-category__title {
  font-size: 20px;
  font-weight: 700;
  margin: 0;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  color: #fff;
}

.sports-category__subtitle {
  font-size: 1.4rem;
  margin: 0;
  opacity: 0.9;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

/* CTA Button Styles - Always visible */
.sports-category__cta {
  margin-top: 1rem;
  opacity: 1; /* Changed from 0 to 1 */
  transform: translateY(0); /* Changed from translateY(10px) to translateY(0) */
  transition: all 0.3s ease;
}

/* Keep hover effect for enhanced interaction */
.sports-category:hover .sports-category__cta {
  opacity: 1;
  transform: translateY(0);
}

.sports-category__cta-button {
  display: inline-block;
  background: #fff;
  color: #000;
  padding: 12px 24px;
  border-radius: 50px;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  text-shadow: none;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.sports-category__cta-button:hover {
  background: #f0f0f0; /* Slightly changed background on hover */
  transform: translateY(-2px); /* Add slight lift on hover */
}

.sports-category__cta-button:active {
  transform: translateY(0);
}

/* Shimmer effect for CTA button */
.sports-category__cta-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.5), transparent);
  transition: left 0.6s ease;
}

.sports-category:hover .sports-category__cta-button::before {
  left: 100%;
}

/* Dot Navigation Styles */
.sports-categories__dots {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12px;
  padding: 0;
  margin-bottom: 5px;
  box-sizing: border-box;
}

.sports-categories__dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background-color: #cbd5e1;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
  padding: 0;
  position: relative;
  overflow: hidden;
  outline: none;
}

.sports-categories__dot:hover {
  background-color: #000;
  transform: scale(1.1);
}

.sports-categories__dot--active {
  background-color: #000;
  transform: scale(1.2);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
}

.sports-categories__dot--active:hover {
  background-color: #000;
}

/* Progress animation for active dot */
.sports-categories__dot--active::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, rgba(255,255,255,0.3) 0%, transparent 100%);
  border-radius: 50%;
  animation: dotShimmer 2s ease-in-out infinite;
}

@keyframes dotShimmer {
  0%, 100% {
    opacity: 0;
    transform: scale(0.8);
  }
  50% {
    opacity: 1;
    transform: scale(1);
  }
}

/* Remove any potential debugging styles */
* {
  box-sizing: border-box;
}

/* Hide demo badges and watermarks */
.demo-badge,
.watermark,
.theme-demo,
[class*="demo"],
[class*="watermark"] {
  display: none !important;
}

/* Responsive Design */
@media (max-width: 768px) {
  .sports-categories {
    padding: 1rem 15px;
  }
   .sports-categories__title{
    margin: 0px 0 30px 0;
  }
