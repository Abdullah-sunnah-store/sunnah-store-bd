  animation-duration: 45s;
}

.sports-categories--fast .sports-categories__scroll-content {
  animation-duration: 15s;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const carousel = document.getElementById('sportsCategoriesCarousel');
  const track = document.getElementById('sportsCategoriesTrack');
  const dotsContainer = document.getElementById('sportsCategoriesDots');
  
  if (!carousel || !track || !dotsContainer) return;

  let categories = track.querySelectorAll('.sports-category');
  let dots = [];
  let currentIndex = 0;
  let categoriesToShow = getCategoriesToShow();
  let autoSlideInterval;
  let isTransitioning = false;
  let originalCategoriesCount = categories.length;

  function getCategoriesToShow() {
    if (window.innerWidth >= 1024) return 3;
    if (window.innerWidth >= 768) return 2;
    return 1;
  }

  function createDots() {
    dotsContainer.innerHTML = '';
    dots = [];
    
    // Create dots based on original categories count
    for (let i = 0; i < originalCategoriesCount; i++) {
      const dot = document.createElement('button');
      dot.className = 'sports-categories__dot';
      dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
      dot.addEventListener('click', () => goToSlide(i));
      dotsContainer.appendChild(dot);
      dots.push(dot);
    }
    
    updateDots();
  }

  function updateDots() {
    // Calculate which original slide we're viewing
    let activeSlideIndex = (currentIndex - categoriesToShow) % originalCategoriesCount;
    if (activeSlideIndex < 0) activeSlideIndex = originalCategoriesCount + activeSlideIndex;
    
    dots.forEach((dot, index) => {
      dot.classList.toggle('sports-categories__dot--active', index === activeSlideIndex);
    });
  }

  function goToSlide(slideIndex) {
    if (isTransitioning) return;
    
    stopAutoSlide();
    currentIndex = slideIndex + categoriesToShow;
    updateCarousel();
    updateDots();
    
    setTimeout(startAutoSlide, 3000); // Restart auto-slide after 3 seconds
  }

  function updateCarousel(instant = false) {
    const categoryWidth = categories[0].offsetWidth;
    const gap = parseInt(getComputedStyle(track).gap) || 24;
    const offset = currentIndex * (categoryWidth + gap);

    if (instant) {
      track.style.transition = 'none';
      track.style.transform = `translateX(-${offset}px)`;
      track.offsetHeight; // force reflow
      track.style.transition = 'transform 0.5s ease';
    } else {
      track.style.transform = `translateX(-${offset}px)`;
    }
    
    updateDots();
  }

  function nextSlide() {
    if (isTransitioning) return;
    isTransitioning = true;
    currentIndex++;

    updateCarousel();

    setTimeout(() => {
      if (currentIndex >= categories.length - categoriesToShow) {
        currentIndex = categoriesToShow;
        updateCarousel(true);
      }
      isTransitioning = false;
    }, 500);
  }

  function prevSlide() {
    if (isTransitioning) return;
    isTransitioning = true;
    currentIndex--;

    updateCarousel();

    setTimeout(() => {
      if (currentIndex < categoriesToShow) {
        currentIndex = categories.length - categoriesToShow * 2;
        updateCarousel(true);
      }
      isTransitioning = false;
    }, 500);
  }

  function startAutoSlide() {
    const speed = getAnimationSpeed();
    autoSlideInterval = setInterval(() => {
      if (!isTransitioning) {
        nextSlide();
      }
    }, speed);
  }

  function stopAutoSlide() {
    clearInterval(autoSlideInterval);
  }

  function getAnimationSpeed() {
    const animationSpeed = '{{ section.settings.animation_speed | default: "normal" }}';
    switch(animationSpeed) {
      case 'fast': return 2000;
      case 'slow': return 6000;
      default: return 4000;
    }
  }

  function createInfiniteLoop() {
    const originalCategories = Array.from(track.querySelectorAll('.sports-category'));

    // Clone last N categories to the front
    const prependClones = originalCategories.slice(-categoriesToShow).map(category => {
      const clone = category.cloneNode(true);
      clone.classList.add('sports-category--cloned');
      return clone;
    });

    prependClones.reverse().forEach(clone => {
      track.insertBefore(clone, track.firstChild);
    });

    // Clone first N categories to the end
    const appendClones = originalCategories.slice(0, categoriesToShow).map(category => {
      const clone = category.cloneNode(true);
      clone.classList.add('sports-category--cloned');
      return clone;
    });

    appendClones.forEach(clone => {
      track.appendChild(clone);
    });

    // Refresh categories list
    categories = track.querySelectorAll('.sports-category');

    // Set initial position
    currentIndex = categoriesToShow;
    updateCarousel(true);
  }

  // Hover event listeners
  carousel.addEventListener('mouseenter', stopAutoSlide);
  carousel.addEventListener('mouseleave', startAutoSlide);

  // Touch support for mobile
  let touchStartX = 0;
  let touchEndX = 0;

  carousel.addEventListener('touchstart', (e) => {
    touchStartX = e.changedTouches[0].screenX;
    stopAutoSlide();
  });

  carousel.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
    setTimeout(startAutoSlide, 2000); // Restart auto-slide after swipe
  });

  function handleSwipe() {
    const swipeThreshold = 50;
    const diff = touchStartX - touchEndX;
    
    if (Math.abs(diff) > swipeThreshold) {
      if (diff > 0) {
        nextSlide(); // Swipe left - next
      } else {
        prevSlide(); // Swipe right - previous
      }
    }
  }

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') {
      prevSlide();
      stopAutoSlide();
      setTimeout(startAutoSlide, 3000);
    } else if (e.key === 'ArrowRight') {
      nextSlide();
      stopAutoSlide();
      setTimeout(startAutoSlide, 3000);
    }
  });

  window.addEventListener('resize', () => {
    const newCategoriesToShow = getCategoriesToShow();
    if (newCategoriesToShow !== categoriesToShow) {
      categoriesToShow = newCategoriesToShow;
      currentIndex = categoriesToShow;
      updateCarousel(true);
      stopAutoSlide();
      startAutoSlide();
    }
  });

  // Initialize
  if (categories.length > 0) {
    originalCategoriesCount = categories.length;
    categoriesToShow = getCategoriesToShow();
    createInfiniteLoop();
    createDots();
    startAutoSlide();
  }
});
</script>

