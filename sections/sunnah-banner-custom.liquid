  border-radius: 15px;
}

.sunnah-banner__content {
  text-align: center;
  max-width: 600px;
}

.sunnah-banner__title {
  font-size: 3.5rem;
  font-weight: 700;
  margin: 0 0 10px;
  background: linear-gradient(90deg, #ffffff, #a0a8fd);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: 1px;
}

.sunnah-banner__text {
  font-size: 18px;
