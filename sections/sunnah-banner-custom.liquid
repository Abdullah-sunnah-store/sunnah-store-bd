<div class="page-width-2">
  <div class="sunnah-banner">
    <div class="sunnah-banner__container">
      
      <div class="sunnah-banner__logo-container">
        <img 
          src="{{ section.settings.logo | img_url: 'original' }}" 
          alt="sunnah Logo" 
          class="sunnah-banner__logo"
          loading="lazy"
          width="300"
          height="300">
      </div>

      <div class="sunnah-banner__content">
        <h2 class="sunnah-banner__title">{{ section.settings.title }}</h2>
        <p class="sunnah-banner__text">{{ section.settings.tagline }}</p>
        <div class="sunnah-banner__description">{{ section.settings.description | rich_text }}</div>

        {% for block in section.blocks %}
          {% if block.type == 'extra' %}
            <div class="sunnah-banner__extra">
              {% if block.settings.icon != blank %}
                <div class="sunnah-banner__extra-icon">
                  <img src="{{ block.settings.icon | image_url: width: 48 }}" alt="Icon" loading="lazy">
                </div>
              {% endif %}
              <div class="sunnah-banner__extra-text">
                <div class="sunnah-banner__extra-heading">
                  <h4>{{ block.settings.heading }}</h4>
                </div>
                <div class="sunnah-banner__extra-sub-heading">
                  <p>{{ block.settings.subheading }}</p>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}

