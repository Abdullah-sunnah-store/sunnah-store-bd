  transition: transform 0.3s ease;
}

/* Contact Dropdown Styles */
.sunnah-banner__contact-dropdown {
  position: relative;
  display: inline-block;
}

.sunnah-banner__button {
  background: linear-gradient(45deg, #17443F, #2ABCA7);
  border-radius: 30px;
  color: #fff;
  display: inline-flex;
  align-items: center;
  font-size: 16px;
  letter-spacing: 2px;
  font-weight: 600;
  padding: 15px 25px;
  text-decoration: none;
  position: relative;
  overflow: hidden;
  z-index: 0;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  gap: 10px;
}

.sunnah-banner__dropdown-arrow {
  transition: transform 0.3s ease;
}

.sunnah-banner__dropdown-arrow.rotated {
  transform: rotate(180deg);
}

/* Remove old background fill effect */
.sunnah-banner__button::after {
  display: none;
}

/* Add shine effect */
.sunnah-banner__button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 150%;
  height: 100%;
  background: linear-gradient(
    120deg,
    rgba(255, 255, 255, 0) 0%,
    rgba(255, 255, 255, 0.4) 50%,
    rgba(255, 255, 255, 0) 100%
  );
  transform: translateX(-100%);
  z-index: 1;
  pointer-events: none;
}

.sunnah-banner__button:hover::before {
  animation: smooth-shine 2s ease-in-out infinite;
}

.sunnah-banner__button:hover {
  transform: translateY(-2px);
  color: #fff;
}

/* Ensure content is above the shine layer */
.sunnah-banner__button > * {
  position: relative;
  z-index: 2;
}

/* Shine animation */
@keyframes smooth-shine {
  0% {
    transform: translateX(-100%);
  }
  50% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(100%);
  }
}

/* Dropdown Menu Styles */
.sunnah-banner__dropdown-menu {
  position: absolute;
  top: calc(100% + 10px);
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #010417 0%, #2B333F 100%);
  border: 1px solid rgba(255, 255, 255, 0.12);
  border-radius: 15px;
  padding: 15px 0;
  min-width: 200px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  opacity: 0;
  visibility: hidden;
  transform: translateX(-50%) translateY(-10px);
  transition: all 0.3s ease;
  z-index: 1000;
  backdrop-filter: blur(10px);
}

.sunnah-banner__dropdown-menu.show {
  opacity: 1;
  visibility: visible;
  transform: translateX(-50%) translateY(0);
}

.sunnah-banner__dropdown-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 20px;
  color: #ffffff;
  text-decoration: none;
  transition: all 0.3s ease;
  font-size: 14px;
  font-weight: 500;
  border-left: 3px solid transparent;
}

.sunnah-banner__dropdown-item:hover {
  background: rgba(255, 255, 255, 0.1);
  border-left-color: #2ABCA7;
  color: #2ABCA7;
  transform: translateX(5px);
}

.sunnah-banner__dropdown-item svg {
  flex-shrink: 0;
  opacity: 0.8;
}

.sunnah-banner__dropdown-item:hover svg {
  opacity: 1;
}

.sunnah-banner__arrow {
  transition: transform 0.2s ease;
}

.sunnah-banner__button:hover .sunnah-banner__arrow {
  transform: translateX(4px);
}


