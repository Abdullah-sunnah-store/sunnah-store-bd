  }
}

@media (max-width: 480px) {
  .cus-blog-soulful-blog-section {
    padding: 40px 0;
  }
  
  .cus-blog-brand-logo h1 {
    font-size: 1.8rem;
    letter-spacing: 1px;
  }
  
  .cus-blog-tagline {
    font-size: 0.95rem;
  }
  
  .cus-blog-search-container {
    width: 95%;
  }
  
  .cus-blog-blog-grid {
    gap: 5px;
  }
  
  .cus-blog-blog-card {
    flex: 0 0 260px;
  }
  
  .cus-blog-card-content {
    padding: 16px;
  }
  
  .cus-blog-card-image {
    height: 180px;
  }
  
  .cus-blog-card-footer {
    flex-direction: row;
    gap: 10px;
    align-items: flex-start;
  }
  
  .cus-blog-blog-header {
    margin-bottom: 40px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Form submission enhancement
  const searchForm = document.querySelector('.cus-blog-search-form');
  if (searchForm) {
    searchForm.addEventListener('submit', function(e) {
      const searchInput = this.querySelector('.cus-blog-search-bar');
      if (!searchInput.value.trim()) {
        e.preventDefault();
        searchInput.focus();
      }
    });
  }
  
  // Add loading state to search button
  const searchBtn = document.querySelector('.cus-blog-search-btn');
  if (searchBtn && searchForm) {
    searchForm.addEventListener('submit', function() {
      searchBtn.innerHTML = '‚è≥';
      setTimeout(() => {
        searchBtn.innerHTML = 'üîç';
      }, 1000);
    });
  }
});
</script>

