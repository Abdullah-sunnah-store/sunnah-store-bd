  transform: translateX(5px);
}

.cus-blog-view-all-container {
  text-align: center;
  margin-top: 50px;
  position: relative;
  z-index: 2;
}

.cus-blog-view-all-btn {
  background: transparent;
  color: #D4A574;
  padding: 16px 40px;
  border-radius: 30px;
  text-decoration: none;
  font-weight: 500;
  font-size: 1.4rem;
  border: 2px solid #D4A574;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 1px;
  display: inline-block;
}

.cus-blog-view-all-btn:hover {
  background: #D4A574;
  color: #1a1a1a;
  box-shadow: 0 5px 15px rgba(212, 175, 55, 0.3);
}

.cus-blog-no-articles {
  text-align: center;
  padding: 60px;
  color: #c4b5a0;
  font-size: 1.2rem;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 12px;
  border: 1px solid rgba(212, 175, 55, 0.3);
  backdrop-filter: blur(10px);
}

.cus-blog-no-articles h2 {
  color: #D4A574;
  margin-bottom: 1rem;
  font-size: 1.5rem;
}

/* Mobile Specific Styles */
@media (max-width: 767px) {
  .cus-blog-soulful-blog-section {
    padding: 60px 0;
    min-height: auto;
  }
  
  .cus-blog-container {
    padding: 0 15px;
  }
  
  .cus-blog-search-container {
