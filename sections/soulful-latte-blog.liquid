{% comment %}
  Soulful Latte Blog Section - Updated with dynamic columns, full width, and search container
{% endcomment %}
<section class="cus-blog-soulful-blog-section">
  <div class="cus-blog-container">
    <!-- Header with Logo and Tagline -->
    <div class="cus-blog-blog-header">
      <div class="cus-blog-brand-logo">
        <h1>{{ section.settings.section_title | default: "SOULFUL LATTE" }} 
          <span class="cus-blog-coffee-steam">‚òÅÔ∏è</span>
          <span class="cus-blog-coffee-steam">‚òÅÔ∏è</span>
          <span class="cus-blog-coffee-steam">‚òÅÔ∏è</span>
          ‚òï
        </h1>
        <p class="cus-blog-tagline">{{ section.settings.section_subtitle | default: "faith & self-growth journal" }}</p>
      </div>
      
      <!-- Search Container -->
      <div class="cus-blog-search-container">
        <form action="{{ blogs[section.settings.blog].url }}" method="get" class="cus-blog-search-form">
          <input type="text" name="q" class="cus-blog-search-bar" placeholder="Search for wisdom, reflection, growth..." value="{{ current_tags.first | default: '' }}">
          <button type="submit" class="cus-blog-search-btn">üîç</button>
        </form>
      </div>
    </div>
    
    <!-- Blog Posts Grid -->
    {% assign selected_blog = section.settings.blog | default: 'news' %}
    {% assign blog_obj = blogs[selected_blog] %}
    {% assign desktop_columns = section.settings.desktop_columns | default: 3 %}
    
    {% if blog_obj.articles.size > 0 %}
      <div class="cus-blog-blog-grid cus-blog-grid-cols-{{ desktop_columns }}">
        {% for article in blog_obj.articles limit: section.settings.posts_to_show %}
          {% comment %}Generate random read time between 4-8 minutes{% endcomment %}
          {% assign random_seed = article.id | modulo: 5 %}
          {% case random_seed %}
            {% when 0 %}
              {% assign read_time = 4 %}
            {% when 1 %}
              {% assign read_time = 5 %}
            {% when 2 %}
              {% assign read_time = 6 %}
            {% when 3 %}
              {% assign read_time = 7 %}
            {% when 4 %}
              {% assign read_time = 8 %}
          {% endcase %}
          
          <article class="cus-blog-blog-card">
            <a href="{{ article.url }}" class="cus-blog-card-link">
              <div class="cus-blog-card-image">
                {% if article.image %}
                  <img src="{{ article.image | img_url: '400x250' }}" alt="{{ article.title }}" loading="lazy">
                {% else %}
                  <div class="cus-blog-placeholder-image">
                    {% case article.tags.first %}
                      {% when 'Faith' %}
                        üïå
                      {% when 'Family' %}
                        üë®‚Äçüë©‚Äçüëß‚Äçüë¶
                      {% when 'Self-Growth' %}
                        üå±
                      {% when 'Lifestyle' %}
                        ‚ú®
                      {% when 'Community' %}
                        ü§ù
                      {% when 'Reflection' %}
                        ü§î
                      {% else %}
                        üìñ
                    {% endcase %}
                  </div>
                {% endif %}
              </div>
              <div class="cus-blog-card-content">
                         {% comment %}   <h3 class="cus-blog-card-title">{{ article.title }}</h3> {% endcomment %}
                <div class="cus-blog-card-meta">
                  <div class="cus-blog-author">
                {% comment %}     <div class="cus-blog-author-avatar">
                      {{ article.author | default: 'Rashid Shahriar' | slice: 0 }}
                    </div> 
                    <span>{{ article.author | default: 'Rashid Shahriar' }}</span>
                    {% endcomment %}
                     {% if article.tags.size > 0 %}
                    <span class="cus-blog-tag">{{ article.tags.first | capitalize }}</span>
                  {% else %}
                    <span class="cus-blog-tag">Article</span>
                  {% endif %}
                  </div>
                  <span class="cus-blog-read-time">{{ read_time }} min üïô</span>
                </div>
                <p class="cus-blog-card-excerpt">{{ article.content | strip_html | truncate: 120 }}</p>
                <div class="cus-blog-card-footer">
                  {% comment %}
                  {% if article.tags.size > 0 %}
                    <span class="cus-blog-tag">{{ article.tags.first | capitalize }}</span>
                  {% else %}
                    <span class="cus-blog-tag">Article</span>
                  {% endif %}
                  {% endcomment %}
                  <span class="cus-blog-read-more">
                    Read more ‚Üí
                  </span>
                </div>
              </div>
            </a>
          </article>
        {% endfor %}
      </div>
      
      <!-- View All Button -->
      <div class="cus-blog-view-all-container">
        <a href="{{ blog_obj.url }}" class="cus-blog-view-all-btn">View All Articles</a>
      </div>
    {% else %}
      <div class="cus-blog-no-articles">
        <h2>No articles found</h2>
        <p>Check back soon for inspiring content about faith and self-growth.</p>
      </div>
    {% endif %}
  </div>
</section>

<style>
/* Coffee steam animation */
@keyframes steam {
  0% { transform: translateY(0) rotate(0deg); opacity: 1; }
  100% { transform: translateY(-20px) rotate(10deg); opacity: 0; }
}

.cus-blog-coffee-steam {
  display: inline-block;
  animation: steam 2s infinite;
  font-size: 0.8em;
}

.cus-blog-coffee-steam:nth-child(2) {
  animation-delay: 0.5s;
}

.cus-blog-coffee-steam:nth-child(3) {
  animation-delay: 1s;
}

.cus-blog-soulful-blog-section {
  background: #272727;
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  padding: 40px 0;
  position: relative;
  font-family: 'Georgia', serif;
  width: 100%;
  margin: 60px 0 auto;
}

.cus-blog-container {
  width: 100%;
  max-width: none;
  margin: 0;
  padding: 0 20px;
  position: relative;
  z-index: 1;
}

.cus-blog-blog-header {
  text-align: center;
  margin-bottom: 60px;
  position: relative;
  z-index: 2;
}

.cus-blog-brand-logo h1 {
  font-size: 36px;
  font-weight: 400;
  color: #D4A574;
  margin: 0 0 10px 0;
  letter-spacing: 4px;
  font-family: 'Georgia', serif;
  text-transform: uppercase;
  position: relative;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
}

.cus-blog-tagline {
  font-size: 20px;
  color: #c4b5a0;
  margin: 0 0 2rem 0;
  font-style: italic;
  font-weight: 300;
  letter-spacing: 1px;
  opacity: 0.9;
}

/* Search Container Styles - From original design */
.cus-blog-search-container {
  max-width: 800px;
  margin: 0 auto 2rem;
  position: relative;
  width: 50%;
}

.cus-blog-search-bar {
  width: 100%;
  padding: 15px 50px 15px 20px;
  border: 2px solid #d4a574;
  border-radius: 25px;
  background: rgba(255,255,255,0.1);
  color: #f5f5f5;
  font-size: 1.2rem;
  backdrop-filter: blur(10px);
}

.cus-blog-search-bar::placeholder {
  color: #c4b5a0;
}

.cus-blog-search-bar:focus {
  outline: none;
  box-shadow: 0 0 20px rgba(212, 165, 116, 0.3);
}

.cus-blog-search-btn {
  position: absolute;
  right: 10px;
  top: 50%;
  transform: translateY(-50%);
  background: #d4a574;
  border: none;
  border-radius: 50%;
  width: 35px;
  height: 35px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.2rem;
  transition: all 0.3s ease;
}


/* Dynamic Grid System */
.cus-blog-blog-grid {
  display: grid;
  gap: 10px;
  margin-bottom: 60px;
  position: relative;
  z-index: 2;
}

/* Desktop Column Options */
@media (min-width: 1024px) {
  .cus-blog-grid-cols-1 {
    grid-template-columns: 1fr;
  }
  
  .cus-blog-grid-cols-2 {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .cus-blog-grid-cols-3 {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .cus-blog-grid-cols-4 {
    grid-template-columns: repeat(4, 1fr);
  }
  
  .cus-blog-grid-cols-5 {
    grid-template-columns: repeat(5, 1fr);
  }
  
  .cus-blog-grid-cols-6 {
    grid-template-columns: repeat(6, 1fr);
  }
}

/* Tablet Layout */
@media (min-width: 768px) and (max-width: 1023px) {
  .cus-blog-blog-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Mobile Layout - Horizontal Scroll */
@media (max-width: 767px) {
  .cus-blog-blog-grid {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    gap: 5px;
    padding-bottom: 10px;
    -webkit-overflow-scrolling: touch;
  }
}

.cus-blog-blog-card {
  background: rgba(0, 0, 0, 0.8);
  overflow: hidden;
  border: 1px solid rgba(212, 175, 55, 0.3);
  transition: all 0.3s ease;
  position: relative;
  backdrop-filter: blur(10px);
}

.cus-blog-blog-card:hover {
  box-shadow: 0 15px 35px rgba(212, 175, 55, 0.2);
  border-color: #D4A574;
}

.cus-blog-card-link {
  display: block;
  text-decoration: none;
  color: inherit;
  height: 100%;
}

.cus-blog-card-image {
  position: relative;
  height: 200px;
  overflow: hidden;
}

.cus-blog-card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.cus-blog-blog-card:hover .cus-blog-card-image img {
  transform: scale(1.05);
}

.cus-blog-placeholder-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #D4A574, #c4b5a0);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2.5rem;
  color: #1a1a1a;
}

.cus-blog-card-content {
  padding: 24px;
  display: flex;
  flex-direction: column;
  height: calc(100% - 200px);
}

.cus-blog-card-title {
  font-size: 1.6rem;
  font-weight: 600;
  margin: 0 0 16px 0;
  line-height: 1.4;
  color: #ffffff;
}

.cus-blog-card-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
  font-size: 1.2rem;
  color: #D4A574;
}

.cus-blog-author {
  display: flex;
  align-items: center;
  gap: 8px;
}

.cus-blog-author-avatar {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background: linear-gradient(45deg, #D4A574, #c4b5a0);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.4rem;
  color: #1a1a1a;
  font-weight: bold;
}

.cus-blog-read-time {
  background: rgba(212, 175, 55, 0.2);
  color: #D4A574;
  padding: 6px 12px 3px;
  border-radius: 20px;
  font-size: 1.2rem;
  font-weight: 500;
  text-transform: capitalize;
  border: 1px solid rgba(212, 175, 55, 0.3);
}

.cus-blog-card-excerpt {
  font-size: 1.4rem;
  line-height: 1.6;
  color: #c4b5a0;
  margin: 0 0 20px 0;
  flex-grow: 1;
}

.cus-blog-card-footer {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: auto;
  padding-top: 16px;
  border-top: 1px solid rgba(212, 175, 55, 0.2);
}

.cus-blog-tag {
  background: rgba(212, 175, 55, 0.2);
  color: #D4A574;
  padding: 6px 12px 3px;
  border-radius: 20px;
  font-size: 1.2rem;
  font-weight: 500;
  text-transform: capitalize;
  border: 1px solid rgba(212, 175, 55, 0.3);
}

.cus-blog-read-more {
  color: #D4A574;
  font-size: 2rem;
  font-weight: 500;
  transition: all 0.3s ease;
  position: relative;
}

.cus-blog-blog-card:hover .cus-blog-read-more {
