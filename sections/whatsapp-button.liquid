<style>
/* WhatsApp Floating Button */
.whatsapp-float {
  position: fixed;
  width: 60px;
  height: 60px;
  bottom: 90px;
  right: 20px;
  background-color: #25d366;
  color: #FFF;
  border-radius: 50px;
  text-align: center;
  font-size: 30px;
  box-shadow: 2px 2px 3px #999;
  z-index: 100;
  transition: all 0.3s ease;
  cursor: pointer;
  text-decoration: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.whatsapp-float:hover {
  background-color: #20ba5a;
  transform: scale(1.1);
  color: #FFF;
  text-decoration: none;
}

.whatsapp-float.hidden {
  display: none;
}

/* Hide button */
.whatsapp-hide-btn {
  position: absolute;
  top: -5px;
  right: -5px;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: #ff4444;
  color: white;
  border: none;
  font-size: 14px;
  cursor: pointer;
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 101;
  transition: all 0.2s ease;
}

.whatsapp-hide-btn:hover {
  background-color: #cc0000;
  transform: scale(1.1);
}

.whatsapp-float:hover .whatsapp-hide-btn {
  display: flex;
}

/* Popup styles */
.whatsapp-popup {
  position: fixed;
  bottom: 120px;
  right: 40px;
  width: 300px;
  background: white;
  border-radius: 10px;
  box-shadow: 0 5px 15px rgba(0,0,0,0.3);
  z-index: 101;
  display: none;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.whatsapp-popup-header {
  background: #075e54;
  color: white;
  padding: 15px;
  border-radius: 10px 10px 0 0;
  display: flex;
  align-items: center;
}

.whatsapp-popup-header img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.whatsapp-popup-body {
  padding: 20px;
}

.whatsapp-popup-message {
  background: #f1f1f1;
  padding: 10px;
  border-radius: 10px;
  margin-bottom: 15px;
  position: relative;
}

.whatsapp-popup-message:before {
  content: '';
  position: absolute;
  left: -8px;
  top: 10px;
  border: 8px solid transparent;
  border-right-color: #f1f1f1;
}

.whatsapp-start-chat {
  background: #25d366;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 25px;
  width: 100%;
  cursor: pointer;
  font-size: 16px;
  transition: background 0.3s ease;
}

.whatsapp-start-chat:hover {
  background: #20ba5a;
}

.whatsapp-close {
  position: absolute;
  top: 10px;
  right: 15px;
  background: none;
  border: none;
  color: white;
  font-size: 20px;
  cursor: pointer;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .whatsapp-float {
    width: 50px;
    height: 50px;
    bottom: 70px;
    right: 20px;
    font-size: 25px;
  }
  
  .whatsapp-popup {
    width: 280px;
    right: 20px;
    bottom: 80px;
  }
  
  .whatsapp-hide-btn {
    width: 18px;
    height: 18px;
    font-size: 12px;
    top: -3px;
    right: -3px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Replace with your WhatsApp number (include country code, no + sign)
  const whatsappNumber = '+8801911242132'; 
  
  // Customize your message
  const defaultMessage = 'Hi! I\'m interested in your products.';
  
  const whatsappButton = document.getElementById('whatsappButton');
  const whatsappPopup = document.getElementById('whatsappPopup');
  const whatsappClose = document.getElementById('whatsappClose');
  const whatsappHide = document.getElementById('whatsappHide');
  const startChat = document.getElementById('startChat');
  
  let popupOpen = false;
  
  // Toggle popup
  whatsappButton.addEventListener('click', function(e) {
    e.preventDefault();
    // Don't open popup if hide button was clicked
    if (e.target === whatsappHide) {
      return;
    }
    
    if (!popupOpen) {
      whatsappPopup.style.display = 'block';
      popupOpen = true;
    } else {
      whatsappPopup.style.display = 'none';
      popupOpen = false;
    }
  });
  
  // Hide WhatsApp button
  whatsappHide.addEventListener('click', function(e) {
    e.preventDefault();
    e.stopPropagation();
    
    // Hide the popup if it's open
    if (popupOpen) {
      whatsappPopup.style.display = 'none';
      popupOpen = false;
    }
    
    // Hide the main button with animation
    whatsappButton.style.transform = 'scale(0)';
    whatsappButton.style.opacity = '0';
    
    setTimeout(function() {
      whatsappButton.classList.add('hidden');
    }, 300);
  });
  
  // Close popup
  whatsappClose.addEventListener('click', function() {
    whatsappPopup.style.display = 'none';
    popupOpen = false;
  });
  
  // Start chat
  startChat.addEventListener('click', function() {
    const whatsappURL = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(defaultMessage)}`;
    window.open(whatsappURL, '_blank');
    whatsappPopup.style.display = 'none';
    popupOpen = false;
  });
  
  // Close popup when clicking outside
  document.addEventListener('click', function(e) {
    if (popupOpen && !whatsappPopup.contains(e.target) && !whatsappButton.contains(e.target)) {
      whatsappPopup.style.display = 'none';
      popupOpen = false;
    }
  });
});
</script>

