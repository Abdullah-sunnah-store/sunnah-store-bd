{%- style -%}
  /* Hide Country Dropdown */
  .country-dropdown {
    display: none !important;
  }

  /* Blinking and zoom animation */
  @keyframes blinkZoom {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.3;
      transform: scale(1.15);
    }
  }

  /* Header Button Styles */
  .header-priority-button {
    background: #fff;
    color: #000;
    border: none;
    padding: 0px;
    border-radius: 50px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    margin-left: 15px;
  }

  .header-priority-button:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .header-priority-button svg {
    width: 16px;
    height: 16px;
    display: none;
  }

  .header-priority-button .button-icon-img {
    width: 100px;
    height: 35px;
    object-fit: contain;
    display: block;
    animation: blinkZoom 1.5s ease-in-out infinite;
  }

  @media screen and (max-width: 749px) {
    .header-priority-button {
      padding: 0px;
      font-size: 12px;
      margin-left: 10px;
      background: transparent;
    }
    
    .header-priority-button:hover {
      background: transparent;
      opacity: 0.8;
    }
    
    .header-priority-button .button-icon-img {
      width: 60px;
      height: 35px;
      animation: blinkZoom 1.5s ease-in-out infinite;
    }
    
    /* Hide text on mobile, show only icon */
    .header-priority-button .button-text {
      display: none;
    }
  }

  /* Modal Overlay */
  .priority-clients-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 9999;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .priority-clients-modal.is-open {
    display: flex !important;
    opacity: 1 !important;
  }

  /* Modal Content */
  .priority-clients-modal__content {
    background: #fff;
    border-radius: 16px;
    max-width: 500px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    transform: scale(0.9);
    transition: transform 0.3s ease;
  }

  .priority-clients-modal.is-open .priority-clients-modal__content {
    transform: scale(1);
  }

  /* Modal Header */
  .priority-clients-modal__header {
    padding: 30px 30px 20px;
    border-bottom: 1px solid #f0f0f0;
    position: relative;
  }

  .priority-clients-modal__close {
    position: absolute;
    top: 20px;
    right: 20px;
    background: none;
    border: none;
    font-size: 28px;
    color: #999;
    cursor: pointer;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s ease;
    z-index: 10;
  }

  .priority-clients-modal__close:hover {
    color: #333;
  }

  .priority-clients-modal__title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 28px;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 8px 0;
  }

  .priority-clients-modal__subtitle {
    font-size: 14px;
    color: #666;
    margin: 0;
  }

  /* Modal Body */
  .priority-clients-modal__body {
    padding: 0;
    min-height: 500px;
  }

  .priority-clients-modal__body iframe {
    min-height: 500px;
    border-radius: 0 0 16px 16px;
    display: block;
  }

  /* Success Message */
  .priority-clients-success {
    display: none;
    text-align: center;
    padding: 60px 30px;
  }

  .priority-clients-success.is-visible {
    display: block;
  }

  .priority-clients-success__icon {
    width: 80px;
    height: 80px;
    background: #27ae60;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 24px;
    animation: successPop 0.5s ease-out;
  }

  @keyframes successPop {
    0% {
      transform: scale(0);
    }
    50% {
      transform: scale(1.1);
    }
    100% {
      transform: scale(1);
    }
  }

  .priority-clients-success__icon svg {
    width: 40px;
    height: 40px;
    stroke: #fff;
    stroke-width: 3;
  }

  .priority-clients-success__title {
    font-size: 28px;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 12px 0;
  }

  .priority-clients-success__message {
    font-size: 16px;
    color: #666;
    margin: 0;
    line-height: 1.5;
  }

  /* Responsive adjustments */
  @media screen and (max-width: 749px) {
    .priority-clients-modal__content {
      max-width: 95%;
      max-height: 95vh;
    }

    .priority-clients-modal__title {
      font-size: 22px;
    }

    .priority-clients-modal__header {
      padding: 20px 20px 15px;
    }

    .priority-clients-modal__body iframe {
      min-height: 450px;
    }

    .priority-clients-success {
      padding: 40px 20px;
    }

    .priority-clients-success__title {
      font-size: 22px;
    }

    .priority-clients-success__message {
      font-size: 14px;
    }
  }
{%- endstyle -%}

<!-- Header Button -->
<button type="button" class="header-priority-button" onclick="window.openPriorityModal()">
  {% if section.settings.button_icon != blank %}
    <img src="{{ section.settings.button_icon | img_url: '100x' }}" alt="Priority Client Icon" class="button-icon-img">
  {% endif %}
  <span class="button-text">{{ section.settings.button_text }}</span>
</button>

<!-- Modal -->
<div class="priority-clients-modal" id="priorityClientsModal-{{ section.id }}">
  <div class="priority-clients-modal__content">
    <div class="priority-clients-modal__header">
      <button type="button" class="priority-clients-modal__close" onclick="window.closePriorityModal()">&times;</button>
      <h2 class="priority-clients-modal__title">{{ section.settings.modal_title }}</h2>
      <p class="priority-clients-modal__subtitle">{{ section.settings.modal_subtitle }}</p>
    </div>

    <!-- Tally Form Container -->
    <div class="priority-clients-modal__body" id="formContainer-{{ section.id }}">
      <iframe 
        id="tallyFrame-{{ section.id }}"
        src="https://tally.so/r/aQdJYB" 
        width="100%" 
        height="500" 
        frameborder="0" 
        marginheight="0" 
        marginwidth="0"
        title="Priority Client Form"
        style="border: none;">
      </iframe>
    </div>

    <!-- Success Message -->
    <div class="priority-clients-success" id="successMessage-{{ section.id }}">
      <div class="priority-clients-success__icon">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
        </svg>
      </div>
      <h3 class="priority-clients-success__title">Thank You!</h3>
      <p class="priority-clients-success__message">We've received your request. Our team will contact you shortly to discuss your priority client benefits.</p>
    </div>
  </div>
</div>

<script>
(function() {
  'use strict';
  
  const sectionId = '{{ section.id }}';
  
  // Listen for Tally form submission
  window.addEventListener('message', function(event) {
    // Check if message is from Tally
    if (event.data && event.data.event === 'Tally.FormSubmitted') {
      console.log('Tally form submitted');
      showThankYouMessage();
    }
  });

  // Show Thank You message
  function showThankYouMessage() {
    const formContainer = document.getElementById('formContainer-' + sectionId);
    const successMessage = document.getElementById('successMessage-' + sectionId);
    
    if (formContainer && successMessage) {
      formContainer.style.display = 'none';
      successMessage.classList.add('is-visible');
      
      // Auto-close modal after 3 seconds
      setTimeout(function() {
        window.closePriorityModal();
      }, 3000);
    }
  }

  // Global functions attached to window object
  window.openPriorityModal = function() {
    console.log('Opening modal...');
    const modal = document.getElementById('priorityClientsModal-' + sectionId);
    if (modal) {
      modal.classList.add('is-open');
      document.body.style.overflow = 'hidden';
      console.log('Modal opened successfully');
    } else {
      console.error('Modal element not found');
    }
  };

  window.closePriorityModal = function() {
    console.log('Closing modal...');
    const modal = document.getElementById('priorityClientsModal-' + sectionId);
    const formContainer = document.getElementById('formContainer-' + sectionId);
    const successMessage = document.getElementById('successMessage-' + sectionId);
    const iframe = document.getElementById('tallyFrame-' + sectionId);
    
    if (modal) {
      modal.classList.remove('is-open');
      document.body.style.overflow = '';
      
      setTimeout(function() {
        // Reset modal state
        if (formContainer) formContainer.style.display = 'block';
        if (successMessage) successMessage.classList.remove('is-visible');
        
        // Reload iframe to reset form
        if (iframe) {
          iframe.src = iframe.src;
        }
      }, 300);
    }
  };

  // Initialize on load
  function init() {
    console.log('Priority Clients Modal initialized for section:', sectionId);
    
    const modal = document.getElementById('priorityClientsModal-' + sectionId);
    
    // Close on overlay click
    if (modal) {
      modal.addEventListener('click', function(e) {
        if (e.target === modal) {
          window.closePriorityModal();
        }
      });
    }

    // Close on ESC key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && modal && modal.classList.contains('is-open')) {
        window.closePriorityModal();
      }
    });
  }

  // Run init when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>

